<h1>Lecturers</h1>
<a href="/">Home</a>
<table style="border: 1px solid black;">
    <!--Displaying the headers for the page-->
    <tr>
        <th style="border: 1px solid black;">Lecturer ID</th>
        <th style="border: 1px solid black;">Name</th>
        <th style="border: 1px solid black;">Department ID</th>
        <th style="border: 1px solid black;">Action</th>
    </tr>
    <!--Displaying the unique details of each lecturer-->
    <% lectureList.forEach((lecturer) => { %>
    <tr>
        <td style="border: 1px solid black;"><%= lecturer._id %></td>
        <td style="border: 1px solid black;"><%= lecturer.name %></td>
        <td style="border: 1px solid black;"><%= lecturer.did %></td>
        <td style="border: 1px solid black;"><a href="/lecturers/delete/<%= lecturer._id %>">Delete</a></td>
    </tr>
    <% }) %>
</table>